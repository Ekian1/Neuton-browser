{
  "name": "neuton-browser",
  "version": "1.0.0",
  "description": "Neuton - A privacy-focused browser that blocks ads and tracking",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "browser",
    "privacy",
    "ad-blocker",
    "tracking-blocker"
  ],
  "author": "Neuton Browser Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "tldjs": "^2.3.2"
  },
  "build": {
    "appId": "com.neutonbrowser.app",
    "productName": "Neuton Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "icon": "assets/icon-256x256.png",
    "win": {
      "target": "dir"
    }
  }
}
